@model ProjectAlpha.Models.P2KP.ViewModel.MateriP2kpFormViewModel

@{
    ViewData["Title"] = "Materi";
}

<div class="container">
    <div class="card">
        <div class="card-body">
            <form asp-action="Materi" asp-controller="P2kp" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input hidden asp-for="P2kpID" class="form-control" />
                <div class="form-group">
                    <label asp-for="File" class="control-label"></label>
                    <input asp-for="File" class="form-control" />
                    <span asp-validation-for="File" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="JenisFIleID" class="control-label"></label>
                    <select asp-for="JenisFIleID" class="custom-select"asp-items="ViewBag.JenisFileID">
                        <option value="">-- Select--</option>
                        
                    </select>
                    <span asp-validation-for="JenisFIleID" class="text-danger" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-info" />
                </div>
            </form>
            <hr />
            <div>
                @await Component.InvokeAsync("MateriP2kp", new { P2kpID = @Model.P2kpID })

            </div>
        </div>
    </div>
</div>
@model Login
@{

    Layout = "Login_Layout";
}
<div class="text-danger" asp-validation-summary="All"></div>
<div class="container">
    <div class="d-flex justify-content-center h-100">
        <div class="card"style="opacity: 0.9;">
            <div class="card-header badge-pill justify-content-center">
                <h3>Log in</h3>
            </div>
            <div class="card-body badge-pill"special-card" style="background-color: rgba(245, 245, 245, 0.4); ">
                <div class="container-fluid">
                    <form asp-action="Login" method="post">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="row">
                            
                                <div class="input-group-prepend">

                                </div>
                                <input type="text" placeholder="Email" asp-for="Email" class="form-control" />
                            
                        </div>
                        <div class="row">
                            
                                <div class="input-group-prepend">

                                </div>
                                <input type="password" placeholder="Password" class="form-control" asp-for="Password">
                           
                        </div><br/>
                        <div class="row">
                            <button class="btn btn-primary justify-content-center" type="submit">Log In</button>
                            
                        </div>
                    </form>
                </div>
            </div>
            <div class="card-footer text-muted">
                KPPBC TMP B BALIKPAPAN
            </div>
        </div>
    </div>
</div>
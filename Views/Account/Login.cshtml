@model Login
@{

    Layout = "Login_Layout";
}
<div class="container h-100 mt-5">
    <div class="row h-100">
    <div class="col-6 align-self-center mx-auto">
        <div class="card h-100 border-info justify-content-center">
             <div class="card-body">
           
                    <form asp-action="Login" method="post">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="form-group">
                          <label for="email">Email:</label>
                          <input type="email" class="form-control" asp-for="Email" placeholder="Enter email" name="email">
                        </div>
                        <div class="form-group">
                          <label for="pwd">Password:</label>
                          <input type="password" class="form-control" asp-for="Password" placeholder="Enter password" name="password">
                        </div>
                        
                        <div class="text-center">
                                    <button class="btn btn-outline-info" style="width:80px" type="submit">Login</button>
                                    <a target="_blank" class="btn btn-warning" asp-controller="Admin" asp-action="Create">Sign Up</a>
                       </div>
                    </form>
                </div>
                </div>
        </div>
       
        </div>
        </div>
    
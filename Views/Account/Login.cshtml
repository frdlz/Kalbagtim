@model Login
@{

    Layout = "Login_Layout";
}
<head>
    

   
    <!--Fontawesome CDN-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif&family=STIX+Two+Math&display=swap" rel="stylesheet">
    <style>
        .allfont {
            font-family: 'STIX Two Math', serif;
        }

        .row {
            display: flex;
        }

        @@media (min-width: 768px) {
            .h-md-100 {
                height: 100vh;
            }

            .bg-indigo {
                background-image: url('https://oasys-bcbpn.com/frontdesk/DSC_0476.jpg');
                background-size: cover;
            }
        }
    </style>
</head>
    

        <div class="d-md-flex h-md-100 align-items-center allfont">


            <div class="col-md-6 h-md-100 bg-indigo">
                
                <div class="text-white d-md-flex align-items-center h-100 text-center justify-content-center">
                    <div class="pt-1 pb-1">
                        <img src="~/img/logobcbpn.png" width="180px" alt="Logo">
                        <h1 class="mb-0 mt-3 display-4">OASYS</h1>
                        
                        <h5 class="mb-4 font-weight-light">- Office Application System -</h5>
                        
                    </div>
                    </div>
                    </div>
            <div class="col-md-6  bg-white h-md-100">
                <div class="d-md-flex align-items-center h-md-100 justify-content-center">
                    <div class="card p-1">

                        <div class="card-body mt-2">
                            <form asp-action="Login" method="post">
                                <input type="hidden" asp-for="ReturnUrl" />
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-dark"><i class="fas fa-at" style="color:floralwhite"></i></span>
                                    </div>
                                    <input type="text" placeholder="Email" asp-for="Email" class="form-control" />

                                </div>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-dark"><i class="fas fa-lock" style="color:floralwhite"></i></span>
                                    </div>
                                    <input type="password" placeholder="Password" class="form-control" asp-for="Password">
                                </div>

                                <div class="text-center">
                                    <button class="btn btn-outline-info" style="width:80px" type="submit">Login</button>
                                    <a target="_blank" class="btn btn-warning" style="width:80px" asp-controller="Admin" asp-action="Create">Sign Up</a>
                                </div>

                               
                               

                            </form>

                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="d-flex justify-content-center links">
                                KPPBC TMP B Balikpapan
                            </div>

                        </div>
                    </div>
                </div>

            </div>
            </div>
                
             



      

 